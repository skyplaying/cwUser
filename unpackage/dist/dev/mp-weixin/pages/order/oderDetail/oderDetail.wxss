.orderCard .orderInfo .goodName {
  height: 40rpx;
  color: #101010;
  font-size: 28rpx;
  text-align: left;
  margin-top: 8rpx;
}
.orderCard .orderInfo .orderNo {
  margin-left: 250rpx;
