.imageItem,
.imageUpload {
	width: 160rpx;
	height: 160rpx;
	margin: 10rpx 0;
	margin-left: 16rpx;
}
.imageItem-row-first {
	margin-left: 0;
}
.imageDel {
	position: relative;
	left: 120rpx;
	bottom: 160rpx;
	background-color: rgba(0, 0, 0, 0.5);
	color: #ffffff;
	width: 36rpx;
	text-align: center;
	line-height: 36rpx;
	border-radius: 60rpx;
	font-size: 40rpx;
}
.imageItem image,
.moveImage,
.imageCover {
	width: 160rpx;
	height: 160rpx;
	border-radius: 8rpx;
}

/* 注释掉的后面可以改回来 */
.imageUpload {
	position: relative;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border: 1px solid #d9d9d9;
	border-radius: 8rpx;

	/* background: url(../../static/index/imgUpload.png) no-repeat; /* 修改了下背景图 */
	/* background-size: 100%; */
	left: 30rpx;
}
.imageUpload:before,
.imageUpload:after {
	content: ' ';
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	-ms-transform: translate(-50%, -50%);
	    transform: translate(-50%, -50%);
	background-color: #d9d9d9;
}
.imageUpload:before {
	width: 4rpx;
	height: 79rpx;
}
.imageUpload:after {
	width: 79rpx;
	height: 4rpx;
}
.moveImage {
	position: absolute;
	-webkit-transform: scale(1.2);
	    -ms-transform: scale(1.2);
	        transform: scale(1.2);
}
.imageCover {
	position: relative;
	left: 0;
	bottom: 178rpx;
	/* width: 100%; */
	text-align: center;
	line-height: 160rpx;
	background-color: rgba(0, 0, 0, 0.5);
	font-size: 24rpx;
	color: white;
}
.firstImageLabel {
	position: relative;
	left: 0;
	bottom: 98rpx;
	width: 100%;
	text-align: center;
	line-height: 40rpx;
