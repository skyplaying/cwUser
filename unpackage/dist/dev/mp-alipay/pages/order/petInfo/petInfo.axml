<view class="page"><block a:if="{{isok}}"><view class="container"><image class="bannerImg" src="../../../static/shop/petbanner.png" mode="aspectFill"></image><view class="percentBall"><view class="ball">30%</view><text class="t1">完善订单信息</text><image class="toTop" src="../../../static/shop/toTop.png" mode="aspectFit"></image></view><view class="petBox1"><view data-event-opts="{{[['tap',[['toPetType',['$event']]]]]}}" onTap="__e"><text class="name1">宠物类型</text><text class="selectedText">{{petType}}</text><image class="toRight" src="../../../static/mine/rightGray.png" mode="aspectFit"></image></view><picker value="{{ageIndex}}" range="{{ageArr}}" data-event-opts="{{[['change',[['bindPetAgeChange',['$event']]]]]}}" onChange="__e"><view class="picker"><text class="name1">宠物年龄</text><block a:if="{{age}}"><text class="selectedText">{{age+"岁"}}</text></block><image class="toRight" src="../../../static/mine/rightGray.png" mode="aspectFit"></image></view></picker></view><view class="petBox1"><picker mode="date" value="{{date}}" start="{{startDate}}" end="{{endDate}}" data-event-opts="{{[['change',[['bindDateChange',['$event']]]]]}}" onChange="__e"><view class="picker"><text class="name1">逝去时间</text><text class="selectedText">{{chinaDate}}</text><image class="toRight" src="../../../static/mine/rightGray.png" mode="aspectFit"></image></view></picker><view data-event-opts="{{[['tap',[['getAddress',['$event']]]]]}}" class="picker" onTap="__e"><text class="name1">逝去地点</text><text class="selectedText">{{leftAddr}}</text><image class="toRight" src="../../../static/mine/rightGray.png" mode="aspectFit"></image></view><picker value="{{index}}" range="{{resonArr}}" data-event-opts="{{[['change',[['bingResonChange',['$event']]]]]}}" onChange="__e"><view class="picker"><text class="name1">逝去原因</text><text class="selectedText">{{reson}}</text><image class="toRight" src="../../../static/mine/rightGray.png" mode="aspectFit"></image></view></picker></view><view class="mBox"><text class="m1">备注</text><textarea class="tx1" maxlength="-1" placeholder="可填写跟车人数、搬运宠物用品等需要" placeholder-style="margin-left:30upx;" data-event-opts="{{[['input',[['__set_model',['','reMark','$event',[]]]]]]}}" value="{{reMark}}" onInput="__e"></textarea></view><view data-event-opts="{{[['tap',[['keep',['$event']]]]]}}" class="keepBtn" onTap="__e">保存</view></view></block></view>